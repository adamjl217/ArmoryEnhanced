  <ThingDef ParentName="BaseHumanGun">
    <defName>Gun_Flintlock_Pistol</defName>
    <label>Flintlock Pistol</label>
    <description>Compact archaic firearm which uses gunpowder to fire steel bullets. Decent accuracy and power but slow to reload and ineffective at long range.</description>
    <graphicData>
      <texPath>Things/Weapons/Tier1/Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractRevolver</soundInteract>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>1.3</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>3.00</RangedWeapon_Cooldown>
      <Weapon_Bulk>0.5</Weapon_Bulk>
    </statBases>
    <costList>
      <WoodLog>20</WoodLog>
      <Steel>20</Steel>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Flintlock</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>22</range>
        <soundCast>ShotFlintlockLight</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>10</muzzleFlashScale>
      </li>
    </verbs>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
      <researchPrerequisite>Blackpowder</researchPrerequisite>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>NeolithicRanged</li>
    </weaponTags>
  </ThingDef>
