  <ThingDef ParentName="BaseHumanGun">
    <defName>Gun_ChargePistol</defName>
    <label>Electro-charge Burstgun</label>
    <description>Cutting Edge, hybrid technology sidearm which uses gauss technology to propel a combination of solid and plasma ammunition held together via a localised magnetic field. Accurate and powerful, especially at close range.</description>
    <graphicData>
      <texPath>Things/Weapons/Tier6/Pistol</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
    </graphicData>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>50000</WorkToMake>
      <Mass>2.25</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>25</Steel>
      <Plasteel>45</Plasteel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <Gold>10</Gold>
      <Jade>10</Jade>
    </costList>
    <generateCommonality>0.30</generateCommonality>
    <techLevel>Spacer</techLevel>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ChargeRifle</defaultProjectile>
        <warmupTime>1.25</warmupTime>
        <range>24</range>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <recipeUsers>
        <li>AdvancedTableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
    <weaponTags>
